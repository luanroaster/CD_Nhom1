@{
    ViewData["Title"] = "Quản lý Khách hàng";
    var customers = ViewBag.Customers as List<PCSTORE.Models.Customer> ?? new List<PCSTORE.Models.Customer>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0"><i class="fas fa-users me-2"></i>Quản lý Khách hàng</h4>
        <small class="text-muted">Tổng số: @(ViewBag.TotalCustomers ?? 0) khách hàng | Đang hoạt động: @(ViewBag.ActiveCustomers ?? 0)</small>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên đăng nhập</th>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Điện thoại</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in customers)
                    {
                        <tr>
                            <td>@customer.Id</td>
                            <td>@customer.Username</td>
                            <td>@customer.FullName</td>
                            <td>@customer.Email</td>
                            <td>@customer.Phone</td>
                            <td>
                                @if (customer.IsActive)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Đã khóa</span>
                                }
                            </td>
                            <td>@customer.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a href="@Url.Action("Detail", "AdminCustomer", new { id = customer.Id })" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i> Chi tiết
                                </a>
                                <form method="post" action="@Url.Action("ToggleActive", "AdminCustomer", new { id = customer.Id })" style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-outline-@(customer.IsActive ? "danger" : "success")">
                                        <i class="fas fa-@(customer.IsActive ? "lock" : "unlock")"></i> @(customer.IsActive ? "Khóa" : "Mở khóa")
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

