@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Quản lý Sản phẩm";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0"><i class="fas fa-box me-2"></i>Quản lý Sản phẩm</h4>
        <small class="text-muted">Tổng số: @(ViewBag.ProductCount ?? 0) sản phẩm</small>
    </div>
    <div class="btn-group" role="group">
        <a href="@Url.Action("ImportData", "Admin")" class="btn btn-outline-secondary">
            <i class="fas fa-file-import"></i> Import Excel
        </a>
        <a href="@Url.Action("SelectCategory", "Admin")" class="btn btn-danger">
            <i class="fas fa-plus"></i> Thêm sản phẩm
        </a>
    </div>
</div>

    <!-- Mô tả tổng quan quyền hạn & chức năng admin -->
    <div class="row mb-4">
        <div class="col-lg-6 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="fas fa-user-shield me-2"></i>Quyền hạn của Admin</h5>
                </div>
                <div class="card-body small">
                    <p class="mb-2"><strong>Admin</strong> là người có quyền cao nhất trong hệ thống, bao gồm:</p>
                    <ul class="mb-2">
                        <li class="mb-1"><strong>Toàn quyền quản lý dữ liệu</strong>
                            <ul class="mb-1">
                                <li>Thêm / sửa / xóa sản phẩm</li>
                                <li>Quản lý danh mục (CPU, VGA, RAM, PSU...)</li>
                                <li>Quản lý thương hiệu (Intel, AMD, Asus, MSI...)</li>
                                <li>Quản lý tồn kho – số lượng nhập/xuất</li>
                            </ul>
                        </li>
                        <li class="mb-1"><strong>Quản lý người dùng</strong>
                            <ul class="mb-1">
                                <li>Xem danh sách tài khoản khách hàng</li>
                                <li>Cập nhật thông tin, Khóa/Mở tài khoản</li>
                                <li>Phân quyền: admin, nhân viên, khách</li>
                            </ul>
                        </li>
                        <li class="mb-1"><strong>Quản lý đơn hàng</strong>
                            <ul class="mb-1">
                                <li>Xem, xác nhận, hủy, giao hàng, hoàn tất</li>
                                <li>Cập nhật trạng thái vận chuyển & thanh toán</li>
                            </ul>
                        </li>
                        <li class="mb-1"><strong>Quản lý nội dung & hệ thống</strong>
                            <ul class="mb-1">
                                <li>Tin tức, khuyến mãi, sự kiện flash sale</li>
                                <li>Backup/restore dữ liệu, cấu hình website</li>
                                <li>Quản lý mã giảm giá, voucher</li>
                                <li>Theo dõi log hoạt động nhân viên</li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-3">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0 text-dark"><i class="fas fa-sitemap me-2 text-danger"></i>Các chức năng admin trong hệ thống</h5>
                </div>
                <div class="card-body small">
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <div class="border rounded-3 p-3 h-100 bg-light">
                                <h6 class="fw-bold text-dark"><i class="fas fa-chart-line me-2 text-danger"></i>Dashboard (Tổng quan)</h6>
                                <p class="text-muted mb-2">Doanh thu, đơn hàng mới, sản phẩm bán chạy, tồn kho sắp hết...</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="border rounded-3 p-3 h-100 bg-light">
                                <h6 class="fw-bold text-dark"><i class="fas fa-box-open me-2 text-danger"></i>Quản lý sản phẩm</h6>
                                <p class="text-muted mb-2">Tên, hình ảnh, giá, tồn kho, thông số kỹ thuật, mô tả, tag SEO...</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="border rounded-3 p-3 h-100 bg-light">
                                <h6 class="fw-bold text-dark"><i class="fas fa-list-ul me-2 text-danger"></i>Quản lý danh mục</h6>
                                <p class="text-muted mb-2">CPU, Mainboard, RAM, SSD/HDD, VGA, PSU, Case, Tản nhiệt, Màn hình, Phụ kiện...</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="border rounded-3 p-3 h-100 bg-light">
                                <h6 class="fw-bold text-dark"><i class="fas fa-shopping-cart me-2 text-danger"></i>Quản lý đơn hàng</h6>
                                <p class="text-muted mb-2">Mã đơn, thông tin khách, sản phẩm, tổng tiền, trạng thái (Chờ duyệt / Đang giao / Hoàn thành / Đã hủy)...</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="border rounded-3 p-3 h-100 bg-light">
                                <h6 class="fw-bold text-dark"><i class="fas fa-users me-2 text-danger"></i>Quản lý khách hàng</h6>
                                <p class="text-muted mb-2">Lịch sử mua hàng, địa chỉ giao hàng, điểm tích lũy, ghi chú...</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="border rounded-3 p-3 h-100 bg-light">
                                <h6 class="fw-bold text-dark"><i class="fas fa-warehouse me-2 text-danger"></i>Quản lý kho – nhập hàng</h6>
                                <p class="text-muted mb-2">Nhập thêm số lượng, theo dõi nhà cung cấp, báo cáo tồn kho...</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="border rounded-3 p-3 h-100 bg-light">
                                <h6 class="fw-bold text-dark"><i class="fas fa-bullhorn me-2 text-danger"></i>Quản lý giao diện & khuyến mãi</h6>
                                <p class="text-muted mb-0">Banner, slide trang chủ, sắp xếp danh mục, mã giảm giá, voucher...</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-bottom">
            <h5 class="mb-0 text-dark">Danh sách sản phẩm <span class="text-muted">(@ViewBag.ProductCount)</span></h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Hình ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Giá cũ</th>
                            <th>Tồn kho</th>
                            <th>Nổi bật</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in ViewBag.Products as List<PCSTORE.Models.Product>)
                        {
                            <tr>
                                <td>@product.Id</td>
                                <td>
                                    @{
                                        var extraImages = string.IsNullOrWhiteSpace(product.ExtraImages)
                                            ? Array.Empty<string>()
                                            : product.ExtraImages.Split(';', StringSplitOptions.RemoveEmptyEntries);
                                    }
                                    <div class="d-flex align-items-center">
                                        <img src="@product.ImageUrl" alt="@product.Name"
                                             style="width: 60px; height: 60px; object-fit: cover; border-radius:4px; border:1px solid #dee2e6;"
                                             onerror="this.src='https://via.placeholder.com/60x60?text=No+Image'">
                                        @if (extraImages.Length > 0)
                                        {
                                            <span class="badge bg-secondary ms-2">
                                                +@extraImages.Length ảnh
                                            </span>
                                        }
                                    </div>
                                </td>
                                <td>@product.Name</td>
                                <td>@string.Format("{0:N0}", product.Price) đ</td>
                                <td>
                                    @if (product.OldPrice > 0)
                                    {
                                        <span class="text-decoration-line-through text-muted">@string.Format("{0:N0}", product.OldPrice) đ</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>@product.Stock</td>
                                <td>
                                    @if (product.IsFeatured)
                                    {
                                        <span class="badge bg-danger">Nổi bật</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">-</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("ProductForm", "Admin", new { id = product.Id })" 
                                       class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <form method="post" action="@Url.Action("DeleteProduct", "Admin")" 
                                          style="display: inline;" 
                                          onsubmit="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">
                                        <input type="hidden" name="id" value="@product.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i> Xóa
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3 d-flex flex-wrap align-items-center gap-2">
        <form method="post" action="@Url.Action("AddAllCPUs", "Admin")" style="display: inline;" 
              onsubmit="return confirm('Bạn có chắc muốn thêm toàn bộ CPU vào database?');">
            <button type="submit" class="btn text-white me-2" style="background-color: #dc3545;">
                <i class="fas fa-microchip"></i> Thêm toàn bộ CPU
            </button>
        </form>
        <form method="post" action="@Url.Action("AddAllRAMs", "Admin")" style="display: inline;" 
              onsubmit="return confirm('Bạn có chắc muốn thêm toàn bộ 32 RAM vào database?');">
            <button type="submit" class="btn text-white me-2" style="background-color: #dc3545;">
                <i class="fas fa-memory"></i> Thêm toàn bộ RAM
            </button>
        </form>
        <a href="@Url.Action("AddAllRAMs", "Admin")" class="btn text-white me-2" style="background-color: #28a745;"
           onclick="return confirm('Bạn có chắc muốn thêm toàn bộ 32 RAM vào database?');">
            <i class="fas fa-memory"></i> Thêm RAM (GET)
        </a>
        <a href="@Url.Action("ImportData", "Admin")" class="btn btn-secondary">
            <i class="fas fa-file-import"></i> Import từ Excel
        </a>
        <form method="post" action="@Url.Action("ImportFromJson", "Admin")" style="display: inline;" 
              onsubmit="return confirm('Bạn có chắc muốn import toàn bộ sản phẩm từ products.json? Các sản phẩm đã tồn tại sẽ không bị ghi đè.');">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-file-code"></i> Import từ JSON
            </button>
        </form>
        <form method="post" action="@Url.Action("UpdateAllProductImages", "Admin")" style="display: inline;" 
              onsubmit="return confirm('Bạn có chắc muốn cập nhật hình ảnh cho 50 sản phẩm? Quá trình này có thể mất vài phút.');">
            <button type="submit" class="btn text-white me-2" style="background-color: #17a2b8;">
                <i class="fas fa-images"></i> Cập nhật hình ảnh
            </button>
        </form>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
            <i class="fas fa-home"></i> Về trang chủ
        </a>
        <form method="post" action="@Url.Action("ClearAllProducts", "Admin")" style="display: inline; margin-left:auto;"
              onsubmit="return confirm('Bạn có chắc muốn xóa TOÀN BỘ sản phẩm? Thao tác này không thể hoàn tác.');">
            <button type="submit" class="btn btn-outline-danger">
                <i class="fas fa-trash-alt"></i> Xóa toàn bộ sản phẩm
            </button>
        </form>
    </div>
</div>

