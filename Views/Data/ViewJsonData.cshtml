@{
    ViewData["Title"] = "Xem dữ liệu JSON";
}

<div class="container mt-4">
    <h2 class="mb-4">Dữ liệu từ JSON</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
        </div>
    }

    @if (ViewBag.Products != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i> 
            Đã tải thành công <strong>@ViewBag.ProductCount</strong> sản phẩm và <strong>@ViewBag.CategoryCount</strong> danh mục từ file JSON
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-white" style="background-color: #dc3545;">
                        <h5 class="mb-0"><i class="fas fa-box"></i> Sản phẩm (@ViewBag.ProductCount)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark sticky-top">
                                    <tr>
                                        <th>ID</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Giá</th>
                                        <th>Hình ảnh</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in ViewBag.Products as List<PCSTORE.Models.Product>)
                                    {
                                        <tr>
                                            <td>@product.Id</td>
                                            <td>@product.Name</td>
                                            <td>@string.Format("{0:N0}", product.Price) đ</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                                {
                                                    <img src="@product.ImageUrl" alt="@product.Name" style="width: 50px; height: 50px; object-fit: cover;" onerror="this.src='https://via.placeholder.com/50x50?text=No+Image'">
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Chưa có</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-white" style="background-color: #000;">
                        <h5 class="mb-0"><i class="fas fa-list"></i> Danh mục (@ViewBag.CategoryCount)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark sticky-top">
                                    <tr>
                                        <th>ID</th>
                                        <th>Tên danh mục</th>
                                        <th>Mô tả</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in ViewBag.Categories as List<PCSTORE.Models.Category>)
                                    {
                                        <tr>
                                            <td>@category.Id</td>
                                            <td>@category.Name</td>
                                            <td>@category.Description</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="mt-3">
        <button class="btn text-white" style="background-color: #dc3545;" onclick="importFromExcel()">
            <i class="fas fa-file-import"></i> Import từ Excel và tìm hình ảnh
        </button>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
            <i class="fas fa-home"></i> Về trang chủ
        </a>
    </div>
</div>

@section Scripts {
    <script>
        function importFromExcel() {
            if (!confirm('Bạn có chắc muốn import dữ liệu từ Excel và tự động tìm hình ảnh? Quá trình này có thể mất vài phút.')) {
                return;
            }

            fetch('/Data/ImportFromExcel', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Thành công! ' + data.message);
                    location.reload();
                } else {
                    alert('Lỗi: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi import dữ liệu');
            });
        }
    </script>
}

