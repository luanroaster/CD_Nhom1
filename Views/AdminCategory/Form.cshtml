@model PCSTORE.Models.Category

@{
    ViewData["Title"] = Model.Id == 0 ? "Thêm danh mục mới" : "Sửa danh mục";
    var isEdit = Model.Id > 0;
}

<div class="card shadow-sm">
    <div class="card-header bg-white border-bottom">
        <h5 class="mb-0">
            <i class="fas fa-@(isEdit ? "edit" : "plus") me-2"></i>
            @(isEdit ? "Sửa danh mục" : "Thêm danh mục mới")
        </h5>
    </div>
    <div class="card-body">
        <form method="post" action="@Url.Action("Form", "AdminCategory")">
            @Html.HiddenFor(m => m.Id)
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Tên danh mục <span class="text-danger">*</span></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label">URL hình ảnh</label>
                <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a href="@Url.Action("Index", "AdminCategory")" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Hủy
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-save"></i> Lưu
                </button>
            </div>
        </form>
    </div>
</div>

