@{
    ViewData["Title"] = "Quản lý Danh mục";
    var categories = ViewBag.Categories as List<PCSTORE.Models.Category> ?? new List<PCSTORE.Models.Category>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0"><i class="fas fa-list me-2"></i>Quản lý Danh mục</h4>
        <small class="text-muted">Tổng số: @categories.Count danh mục</small>
    </div>
    <a href="@Url.Action("Form", "AdminCategory")" class="btn btn-danger">
        <i class="fas fa-plus"></i> Thêm danh mục
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên danh mục</th>
                        <th>Mô tả</th>
                        <th>Hình ảnh</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in categories)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>@category.Description</td>
                            <td>
                                @if (!string.IsNullOrEmpty(category.ImageUrl))
                                {
                                    <img src="@category.ImageUrl" alt="@category.Name" style="max-width: 50px; max-height: 50px; object-fit: cover;" />
                                }
                                else
                                {
                                    <span class="text-muted">Không có</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Form", "AdminCategory", new { id = category.Id })" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <form method="post" action="@Url.Action("Delete", "AdminCategory", new { id = category.Id })" style="display: inline;" onsubmit="return confirm('Bạn có chắc chắn muốn xóa danh mục này?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i> Xóa
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

