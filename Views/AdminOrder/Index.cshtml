@{
    ViewData["Title"] = "Quản lý Đơn hàng";
    var orders = ViewBag.Orders as List<PCSTORE.Models.Order> ?? new List<PCSTORE.Models.Order>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>Quản lý Đơn hàng</h4>
        <small class="text-muted">Tổng số: @(ViewBag.TotalOrders ?? 0) đơn hàng</small>
    </div>
    <div class="btn-group" role="group">
        <a href="@Url.Action("Index", "AdminOrder", new { status = "" })" class="btn btn-outline-secondary @(ViewBag.Status == null || ViewBag.Status == "" ? "active" : "")">
            Tất cả
        </a>
        <a href="@Url.Action("Index", "AdminOrder", new { status = "Chờ duyệt" })" class="btn btn-outline-warning @(ViewBag.Status == "Chờ duyệt" ? "active" : "")">
            Chờ duyệt (@(ViewBag.PendingOrders ?? 0))
        </a>
        <a href="@Url.Action("Index", "AdminOrder", new { status = "Đang giao" })" class="btn btn-outline-info @(ViewBag.Status == "Đang giao" ? "active" : "")">
            Đang giao (@(ViewBag.DeliveringOrders ?? 0))
        </a>
        <a href="@Url.Action("Index", "AdminOrder", new { status = "Hoàn thành" })" class="btn btn-outline-success @(ViewBag.Status == "Hoàn thành" ? "active" : "")">
            Hoàn thành (@(ViewBag.CompletedOrders ?? 0))
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Mã đơn</th>
                        <th>Khách hàng</th>
                        <th>Số lượng SP</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Thanh toán</th>
                        <th>Ngày tạo</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in orders)
                    {
                        <tr>
                            <td><strong>@order.OrderCode</strong></td>
                            <td>@order.CustomerName</td>
                            <td>@order.Items.Count</td>
                            <td><strong class="text-danger">@string.Format("{0:N0}", order.TotalAmount) đ</strong></td>
                            <td>
                                @if (order.Status == "Chờ duyệt")
                                {
                                    <span class="badge bg-warning">@order.Status</span>
                                }
                                else if (order.Status == "Đang giao")
                                {
                                    <span class="badge bg-info">@order.Status</span>
                                }
                                else if (order.Status == "Hoàn thành")
                                {
                                    <span class="badge bg-success">@order.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@order.Status</span>
                                }
                            </td>
                            <td>
                                @if (order.PaymentStatus == "Đã thanh toán")
                                {
                                    <span class="badge bg-success">@order.PaymentStatus</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@order.PaymentStatus</span>
                                }
                            </td>
                            <td>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <a href="@Url.Action("Detail", "AdminOrder", new { id = order.Id })" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i> Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

