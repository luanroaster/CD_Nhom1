@model PCSTORE.Models.Banner

@{
    ViewData["Title"] = Model.Id == 0 ? "Thêm banner" : "Sửa banner";
    var isEdit = Model.Id > 0;
}

<div class="card shadow-sm">
    <div class="card-header bg-white border-bottom">
        <h5 class="mb-0">
            <i class="fas fa-@(isEdit ? "edit" : "plus") me-2"></i>
            @(isEdit ? "Sửa banner" : "Thêm banner mới")
        </h5>
    </div>
    <div class="card-body">
        <form method="post" action="@Url.Action("BannerForm", "AdminPromotion")">
            @Html.HiddenFor(m => m.Id)
            
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Tiêu đề <span class="text-danger">*</span></label>
                <input asp-for="Title" class="form-control" required />
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="2"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label">URL hình ảnh <span class="text-danger">*</span></label>
                <input asp-for="ImageUrl" class="form-control" required placeholder="https://..." />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="LinkUrl" class="form-label">Link URL</label>
                    <input asp-for="LinkUrl" class="form-control" placeholder="https://..." />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="DisplayOrder" class="form-label">Thứ tự hiển thị</label>
                    <input asp-for="DisplayOrder" type="number" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Kích hoạt</label>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a href="@Url.Action("Banners", "AdminPromotion")" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Hủy
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-save"></i> Lưu
                </button>
            </div>
        </form>
    </div>
</div>

