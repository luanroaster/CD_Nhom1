@model PCSTORE.Models.Promotion

@{
    ViewData["Title"] = Model.Id == 0 ? "Thêm mã khuyến mãi" : "Sửa mã khuyến mãi";
    var isEdit = Model.Id > 0;
}

<div class="card shadow-sm">
    <div class="card-header bg-white border-bottom">
        <h5 class="mb-0">
            <i class="fas fa-@(isEdit ? "edit" : "plus") me-2"></i>
            @(isEdit ? "Sửa mã khuyến mãi" : "Thêm mã khuyến mãi mới")
        </h5>
    </div>
    <div class="card-body">
        <form method="post" action="@Url.Action("PromotionForm", "AdminPromotion")">
            @Html.HiddenFor(m => m.Id)
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Code" class="form-label">Mã khuyến mãi <span class="text-danger">*</span></label>
                    <input asp-for="Code" class="form-control" required />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label">Tên khuyến mãi <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" required />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="2"></textarea>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Type" class="form-label">Loại</label>
                    <select asp-for="Type" class="form-select">
                        <option value="Percentage">Phần trăm (%)</option>
                        <option value="FixedAmount">Số tiền cố định</option>
                    </select>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Value" class="form-label">Giá trị <span class="text-danger">*</span></label>
                    <input asp-for="Value" type="number" step="0.01" class="form-control" required />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="MinOrderAmount" class="form-label">Đơn hàng tối thiểu</label>
                    <input asp-for="MinOrderAmount" type="number" step="1000" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="MaxUsage" class="form-label">Số lần sử dụng tối đa</label>
                    <input asp-for="MaxUsage" type="number" class="form-control" />
                    <small class="text-muted">Để trống = không giới hạn</small>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="StartDate" class="form-label">Ngày bắt đầu</label>
                    <input asp-for="StartDate" type="date" class="form-control" required />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="EndDate" class="form-label">Ngày kết thúc</label>
                    <input asp-for="EndDate" type="date" class="form-control" required />
                </div>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Kích hoạt</label>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a href="@Url.Action("Promotions", "AdminPromotion")" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Hủy
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-save"></i> Lưu
                </button>
            </div>
        </form>
    </div>
</div>

