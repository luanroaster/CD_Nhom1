@{
    ViewData["Title"] = "Dashboard - Tổng quan";
}

<div class="row g-4 mb-4">
    <!-- Doanh thu hôm nay -->
    <div class="col-md-3">
        <div class="card bg-danger text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-white-50">Doanh thu hôm nay</h6>
                        <h3 class="mb-0">@string.Format("{0:N0}", ViewBag.TodayRevenue ?? 0) đ</h3>
                    </div>
                    <i class="fas fa-money-bill-wave fa-3x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Đơn hàng mới -->
    <div class="col-md-3">
        <div class="card bg-primary text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-white-50">Đơn hàng mới</h6>
                        <h3 class="mb-0">@(ViewBag.NewOrders ?? 0)</h3>
                    </div>
                    <i class="fas fa-shopping-cart fa-3x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Tổng sản phẩm -->
    <div class="col-md-3">
        <div class="card bg-success text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-white-50">Tổng sản phẩm</h6>
                        <h3 class="mb-0">@(ViewBag.TotalProducts ?? 0)</h3>
                    </div>
                    <i class="fas fa-box fa-3x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Tổng khách hàng -->
    <div class="col-md-3">
        <div class="card bg-info text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-white-50">Tổng khách hàng</h6>
                        <h3 class="mb-0">@(ViewBag.TotalCustomers ?? 0)</h3>
                    </div>
                    <i class="fas fa-users fa-3x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Sản phẩm bán chạy -->
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-0"><i class="fas fa-fire text-danger me-2"></i>Sản phẩm bán chạy</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.BestSellingProducts != null && ((List<PCSTORE.Models.Product>)ViewBag.BestSellingProducts).Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Tồn kho</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in (List<PCSTORE.Models.Product>)ViewBag.BestSellingProducts)
                                {
                                    <tr>
                                        <td>@product.Name</td>
                                        <td>@string.Format("{0:N0}", product.Price) đ</td>
                                        <td>
                                            @if (product.Stock < 10)
                                            {
                                                <span class="badge bg-warning">@product.Stock</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">@product.Stock</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center">Chưa có dữ liệu</p>
                }
            </div>
        </div>
    </div>

    <!-- Tồn kho sắp hết -->
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle text-warning me-2"></i>Tồn kho sắp hết</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.LowStockProducts != null && ((List<PCSTORE.Models.Product>)ViewBag.LowStockProducts).Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Tên sản phẩm</th>
                                    <th>Tồn kho</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in (List<PCSTORE.Models.Product>)ViewBag.LowStockProducts)
                                {
                                    <tr>
                                        <td>@product.Name</td>
                                        <td>
                                            <span class="badge bg-danger">@product.Stock</span>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Index", "AdminInventory")" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-plus"></i> Nhập hàng
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center">Không có sản phẩm nào sắp hết hàng</p>
                }
            </div>
        </div>
    </div>
</div>

